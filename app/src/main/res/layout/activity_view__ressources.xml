<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeremynormandin.taskmanager.View_Ressources">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/viewResFor"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/addButton"
            android:layout_alignStart="@+id/addButton"
            android:layout_alignTop="@+id/groups"
            android:text="View Ressources for :"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:verticalScrollbarPosition="right" />

        <Spinner
            android:id="@+id/groups"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/deleteButton"
            android:layout_alignStart="@+id/deleteButton"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/viewResFor"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button"
            android:text="Refresh" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:background="@drawable/round_button"
            android:text="New ressource" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="150dp"
            android:layout_height="50dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/round_button"
            android:text="Delete Ressource" />


    </RelativeLayout>

    <Button
        android:id="@+id/homeButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_button"
        android:text="Home" />

    <ListView
        android:id="@+id/resList"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/homeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

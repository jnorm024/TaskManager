<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jeremynormandin.taskmanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logobrebis"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logobrebis"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".viewReward" />
        <activity android:name=".TaskCreation" />
        <activity android:name=".NewUser" />
        <activity android:name=".createReward" />
        <activity android:name=".PrincipalActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".giveRewards" />
        <activity android:name=".TaskDetails" />
        <activity android:name=".Settings" />
        <activity android:name=".View_Ressources" />
        <activity android:name=".New_Ressource" />
        <activity android:name=".ViewScore" />
        <activity android:name=".ModifyTask" />
        <activity android:name=".ManageRessources" />
        <activity android:name=".AddResToTask"></activity>
    </application>

</manifest>